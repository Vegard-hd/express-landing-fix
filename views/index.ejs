<script>
  // Function to track scroll events
  function trackScrollEvent() {
    let hasScrolled = false;

    window.addEventListener("scroll", () => {
      if (!hasScrolled) {
        plausible("scroll"); // Trigger Plausible custom event
        hasScrolled = true; // Ensure the event is only triggered once
      }
    });
  }

  // Initialize the scroll tracking
  trackScrollEvent();
</script>
